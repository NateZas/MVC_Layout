@model MVC_Layout.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <div class="container m-0 p-0">
        <h2 class="text-info">Details</h2>
        <table class="table table-striped">
            <tr>
                <th>ProductID</th>
                <td>@Model.ProductID</td>
            </tr>
            <tr>
                <th>Product Name</th>
                <td>@Model.ProductName</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th>Date of Purchase</th>
                <td>@Model.DateOfPurchase</td>
            </tr>
            <tr>
                <th>Availability Status</th>
                <td>@Model.AvailabilityStatus</td>
            </tr>
            <tr>
                <th>Catagory ID</th>
                <td>@Model.CategoryID</td>
            </tr>
            <tr>
                <th>Brand ID</th>
                <td>@Model.BrandID</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>@Model.Active</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>
                    <a href="/Product/Index" class="btn btn-dark">Back</a>
                </td>
            </tr>
        </table>
    </div> 