@model List<MVC_Layout.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container row p-0 m-0">
    <h2 class="text-info">Index</h2>
    <form method="get" action="/Product/index" class="form-inline">
        <input type="search" name="search" id="search" class="form-control mr-1" value="@ViewBag.search" />
        <table class="table table-striped">
            <tr>
                <th>ProductID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Date of Purchase</th>
                <th>Availability Status</th>
                <th>Catagory ID</th>
                <th>Brand ID</th>
                <th>Active</th>
                <th>Actions      </th>

            </tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price.Value.ToString("C")</td>
                    <td>@product.DateOfPurchase.Value.ToString("yyyy/MM/DD")</td>
                    <td>@product.AvailabilityStatus</td>
                    <td>@product.CategoryID</td>
                    <td>@product.BrandID</td>
                    <td>@product.Active</td>
                    <td>
                        <a href="/Product/Details/@product.ProductID" class="btn btn-primary">Details</a>
                        <a href="/Product/Create" class="btn btn-secondary">Create</a>
                        <a href="/Product/Delete/@product.ProductID" class="btn btn-danger">Delete</a>
                        <a href="/Product/Update/@product.ProductID" class="btn btn-dark">Update</a>
                    </td>
                </tr>
            }
        </table>
    </form>
</div>